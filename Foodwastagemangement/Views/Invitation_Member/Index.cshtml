@model IEnumerable<Foodwastagemangement.Models.Invitation_Member>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@{
    if (TempData["HideButton"]!=null &&TempData["HideButton"].ToString() == "true")
    {
        <p>
             @Html.ActionLink("Select Menu", "Create","Menu_selection")
        </p>
    }
    else
    {
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
    }
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Member_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Member_Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ev_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Event_Organizer_Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Member_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Member_Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ev_Name)

                @{
                    if (item.Ev_Name != null)
                    {
                        Session["AfterCreationEvent"] = item.Ev_Name;
                    }
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem=>item.Event_Organizer_Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Member_Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Member_Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Member_Id })
            </td>
        </tr>
    }

</table>
