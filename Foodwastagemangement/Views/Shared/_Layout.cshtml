<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Food Management", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Event Creator", "Index", "Event_Creator", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Invite Member", "Index", "Invitation_Member", new { area = "" }, new { @class = "navbar-brand" })
                @{
                    if (Session["ShowNav"] != null && Session["ShowNav"].ToString() == "true")
                    {
                        @Html.ActionLink("Menu Selection", "Index", "Menu_Selection", new { area = "" }, new { @class = "navbar-brand" })
                    }
                    else
                    {

                    }
                }

                @{
                    if (Session["ShowNav"] != null && Session["ShowNav"].ToString() == "true")
                    {
                        @Html.ActionLink("Add Menu", "Index", "Menu_Category", new { area = "" }, new { @class = "navbar-brand" })
                    }
                    else
                    {

                    }
                }


                @{
                    if (Session["UserName"] == null)
                    {
                        @Html.ActionLink("Login", "Login", "clients", new { area = "" }, new { @class = "navbar-brand" })
                    }
                    else
                    {
                        @Html.ActionLink("Logout", "Logout", "clients", new { area = "" }, new { @class = "navbar-brand" })
                        <p class="" style="color:white;font-weight:bold;float:right;padding:14px;">@Session["UserName"]</p>
                    }

                }


            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>